{
  "name": "websocket refresh chrome extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension was created with the awesome extensionizr.com",
  "homepage_url": "https://github.com/ahmed-musallam/websocket-refresh-chrome-ext",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "websocket refresh chrome extension",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "https://*/*"
  ]
}